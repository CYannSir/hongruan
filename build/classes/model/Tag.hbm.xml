<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="model">
     <class name="Tag" table="tag">
        <id name="tid" column="tid" >
              <generator class="uuid"/>
        </id>
        <property name="pid" type="string" column="pid"  />
        <property name="wid" type="string" column="wid"  />
        <property name="xleft" type="double" column="xleft"  />
        <property name="yleft" type="double" column="yleft"  />
        <property name="xright" type="double" column="xright"  />
        <property name="yright" type="double" column="yright"  />
     </class>
</hibernate-mapping>

